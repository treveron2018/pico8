--tools 

function getspr(ani,_t)
	return ani[flr(_t/15)%#ani+1]
end

-->8
--player


function upd_player()
	if btn(0)then
		p.dx=-1
		p.flp=true
	elseif btn(1)then
		p.dx=1
		p.flp=false
	else
	p.dx=0
	end
	if p.dx!=0 then
		p.ani={8,12,16}
		p.anit+=1
	else
		p.ani={8}
		p.anit=15
	end
	p.x+=p.dx
end

function drw_player()
	sspr(getspr(p.ani,p.anit),0,p.w,p.h,p.x,p.y,p.w,p.h,p.flp)
end
