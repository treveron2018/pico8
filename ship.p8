function _init()
	
	p={
		x=64,
		y=64,
		dx=0,
		dy=0,
		r=5,
		px={0,0,0,0},
		py={0,0,0,0},
		pang={0,.4,-.4,.5},
		poff={0,0,0,1},
		rot=1,
		rotspd=.02,
		hp=3,
		acc=.05,
		spd=0,
		frc=.01,
		vmax=1.5,
		vmin=-1.5,
		bull_lim=3,
		isdead=false,
		rsp=150,
		rspt=0,
		rspx=64,
		rspy=64
	}
	bullets={}
	propeller={}
	bullets={}
	particles={}
	shwaves={}
	vdoors={}
	t=0
	upd=upd_game
	drw=drw_game
end

function _update60()
	t+=1
	upd()
end

function _draw()
	cls()
	drw()
--	print(debug,0,0,7)
end

function upd_game()
	if(not p.isdead) then
		upd_shp()
		move_shp()
	else
		respawn()
	end
	upd_prop()
	upd_bul()
	upd_part()
	upd_shw()
	spawn_doors()
	upd_doors()
end

function drw_game()
	map()
	if(not p.isdead)drw_shp()
	drw_prop()
	drw_bul()
	drw_part()
	drw_shw()
	drw_doors()
	--debug
	--print(#vdoors,0, 0, 10)
end
