function _init()
	p={
		x=64,
		y=64,
		w=4, 
		h=4,
		dx=0,
		dy=0,
		ani={12,16,8},
		flp=false,
		anit=0
	}
	t=0
end

function _update60()
	t+=1
	upd_player()
end

function _draw()
	cls()
	drw_player()
end
