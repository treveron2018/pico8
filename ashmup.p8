function _init()
	p={
		x=56,
		y=100,
		spt=3,
		spd=3
	}
end

function _update()
	control_ship()
end

function _draw()
	cls()
	draw_ship()
end
-->8
--player

function control_ship()
	if (btn(⬆️))p.y-=p.spd
	if (btn(⬇️))p.y+=p.spd
	if (btn(⬅️))p.x-=p.spd
	if (btn(➡️))p.x+=p.spd
	
	if (p.x<0)p.x=0
	if (p.x>111)p.x=111
	if (p.y<0)p.y=0
	if (p.y>111)p.y=111
end

function draw_ship()
	spr(p.spt,p.x,p.y,2,2)
end
