--map

function spawn_doors()
	for x=0, 15 do
		for y=0, 15 do
			if mget(x,y)==2 then
				mset(x,y,0)
				add_vdoor(x,y)
			end
		end
	end
end

function add_vdoor(_x,_y)
	local d={
		x=_x*8+4,
		y=_y*8,
		w=8,
		h=16,
		o=0, 
		closed=true,
		opening=false
	}
	d.sensor={
		x=d.x,
		y=d.y+8,
		r=20
	}
	add(vdoors,d)
end

function upd_doors()
	for d in all(vdoors) do
		for i=1,3 do
			local p={x=p.px[i],y=p.py[i]}
			if dist(p, d.sensor)<d.sensor.r then
				d.closed=false
				return
			else d.closed=true
			end
		end
	end
end

function drw_doors()
	for d in all(vdoors) do
		if(d.closed)rectfill(d.x,d.y,d.x+d.w-1,d.y+d.h-1,7)
		circ(d.sensor.x, d.sensor.y, d.sensor.r)
	end
end
