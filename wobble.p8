--wobble function
--by treveron

function _init()
	--because we'll be using sspr
	--the sprite to draw needs
	gue={
		sx=8,--x position on spr sheet
		sy=0,--y position on spr sheet
		sw=8,--spr width on spr sheet
		sh=8,--spr height on spr sheet
		x=40,--x position on screen
		y=40,--y position on screen
		w=56,--width on screen
		h=56,--height on screen
		t=0--timer (could be a global variable)
	}
end

function _update()
	gue.t+=1--increment timer
	gue=wobble(gue)--get the wobbly w and h
end

function _draw()
	cls()
	sspr(gue.sx,gue.sy,gue.sw,gue.sh,gue.x,gue.y,gue.w,gue.h)
end

function wobble(o)
	local wob=sin(o.t/30)
	o.x,o.y=o.x-wob/2,o.y+wob
	o.w,o.h=o.w+wob,o.h+wob*-1
	return o
end
